<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="pfblock-header">
                <h2 data-bind="text: $data.title" class="pfblock-title"></h2>

                <div class="pfblock-line"></div>
                <div data-bind="with: $data.properties" class="pfblock-subtitle">
                </div>
            </div>
        </div>
    </div>
    
    <div data-bind="if: $data.entities" class="row">
        <!-- ko foreach: $data.entities -->
        @Html.Partial(Url.Content("siren/entities/collection/films/filmsCollectionItem.cshtml"))
        <!-- /ko -->
    </div>

    <!-- ko with: $data.activeItem() -->
    <div data-bind="modal: $data" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Film details</h4>
                </div>
                <div class="modal-body">
                    @Html.Partial(Url.Content("siren/entities/single/film.cshtml"))
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <!-- /ko -->
    
    <div class="form-group text-center">
        <span data-bind="text: $data.properties['page Details']" ></span>
    
        <!-- ko if: links -->
        <div data-bind="foreach: links">
            <a href="#" data-bind="click: $data.execute.bind($data)">
                <span data-bind="text: $data.title"></span>
            </a>
        </div>
        <!-- /ko -->
        
        <span data-bind="if: !$data.entities">No results.</span>
    </div>
</div>
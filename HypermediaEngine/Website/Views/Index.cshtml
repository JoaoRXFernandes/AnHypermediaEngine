@using Core.Primitives
@using HypermediaEngine.API.Infrastructure.Extensions
<!DOCTYPE html>

<html id="application" lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>Hypermedia Engine</title>

        <link href="@Url.Content("~/styles/bootstrap.min.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/styles/font-awesome.min.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/styles/simple-line-icons.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/styles/animate.css")" rel="stylesheet">
    
        <link href="@Url.Content("~/styles/style.css")" rel="stylesheet" media="screen">

        <script src="@Url.Content("~/scripts/vendor/modernizr.custom.js")"></script>
        
        <link href="@Url.Content("~/styles/collectionEntity/collectionEntity.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/styles/actions/fields/multiSelectField.css")" rel="stylesheet" media="screen">

        @if (Context.HasUserClaim(Claim.Books))
        { 
            <link href="@Url.Content("~/styles/books/booksCollection.css")" rel="stylesheet" media="screen">
            <link href="@Url.Content("~/styles/books/book.css")" rel="stylesheet" media="screen">
        }
    </head>

    <body>
        <div id="preloader">
            <div id="status"></div>
        </div>

        <section id="home" class="pfblock-image screen-height">
            <div class="home-overlay"></div>
            <div class="intro">
                <h1>Hypermedia Engine</h1>
                <div class="start">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</div>
                <div class="start">Donec eu elit non ex tempus cursus et ac sem.</div>
                <div class="start">Nulla imperdiet metus eget nibh pellentesque efficitur.</div>
                <div class="start">Aenean aliquet porttitor justo, in pretium magna.</div>
                <div class="start">Aenean ac vehicula metus.</div>
            </div>

            <a href="#root">
                <div class="scroll-down">
                    <span>
                        <i class="fa fa-angle-down fa-2x"></i>
                    </span>
                </div>
            </a>
        </section>
        
        
        <!-- ko if: errorMessage() -->
        <div data-bind="alert: { message: errorMessage, type: 'danger' }"></div>
        <!-- /ko -->
        

        @Html.Partial(Url.Content("root.cshtml"))
        @Html.Partial(Url.Content("currentResponse.cshtml"))

        <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <ul class="social-links">
                            <li><a href="#" class="wow fadeInUp" data-wow-delay=".1s"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" class="wow fadeInUp" data-wow-delay=".2s"><i class="fa fa-envelope"></i></a></li>
                        </ul>

                        <p class="heart">
                            Made with <span class="fa fa-heart fa-2x animated pulse"></span> in London
                        </p>
                    </div>
                </div>
            </div>
        </footer>

        <div class="scroll-up">
            <a href="#home"><i class="fa fa-angle-up"></i></a>
        </div>

        <script src="@Url.Content("~/scripts/vendor/jquery-1.11.1.min.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.sticky.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.parallax-1.1.3.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.easypiechart.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.cbpQTRotator.js")"></script>

        <script src="@Url.Content("~/scripts/vendor/bootstrap.min.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/underscore.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/moment.min.js")"></script>
        
        <script src="@Url.Content("~/scripts/vendor/imagesloaded.pkgd.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/smoothscroll.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/wow.min.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/waypoints.min.js")"></script>
        
        <script src="@Url.Content("~/scripts/vendor/knockout-3.3.0.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/knockout.mapping-latest.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/knockout.validation.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/knockout-switch-case.min.js")"></script>
        
        <script src="@Url.Content("~/scripts/vendor/knockstrap.min.js")"></script>

        <script src="@Url.Content("~/scripts/vendor/custom.js")"></script>
        
        <script src="@Url.Content("~/scripts/knockout/modalBinding.js")"></script>
        <script src="@Url.Content("~/scripts/knockout/forEachPropertyBinding.js")"></script>

        <script src="@Url.Content("~/scripts/knockout/mapping/sirenMappings.js")"></script>

        <script src="@Url.Content("~/scripts/siren/entity.js")"></script>
        <script src="@Url.Content("~/scripts/siren/action.js")"></script>
        <script src="@Url.Content("~/scripts/siren/field.js")"></script>
        <script src="@Url.Content("~/scripts/siren/multiSelectField.js")"></script>
        <script src="@Url.Content("~/scripts/siren/multiSelectFieldOption.js")"></script>
        <script src="@Url.Content("~/scripts/siren/link.js")"></script>
        <script src="@Url.Content("~/scripts/siren/properties.js")"></script>

        <script src="@Url.Content("~/scripts/siren/entities/single/actionEntity.js")"></script>
        <script src="@Url.Content("~/scripts/siren/entities/collections/collectionEntity.js")"></script>
        <script src="@Url.Content("~/scripts/siren/entities/collections/collectionEntityItem.js")"></script>

        <script src="@Url.Content("~/scripts/siren/entities/single/unauthorised.js")"></script>
        <script src="@Url.Content("~/scripts/siren/entities/single/root/root.js")"></script>
        <script src="@Url.Content("~/scripts/siren/entities/single/root/menu.js")"></script>


        @if (Context.HasUserClaim(Claim.Films))
        {
            <script src="@Url.Content("~/scripts/siren/entities/collections/filmsCollection.js")"></script>
            <script src="@Url.Content("~/scripts/siren/entities/collections/filmsCollectionItem.js")"></script>
        }

        <script src="@Url.Content("~/scripts/application.js")"></script>
        
        <input type="hidden" id="rootUrl" value="@ConfigurationManager.AppSettings["rootUrl"]" />
        <script type="text/javascript">
            new WOW().init();

            ko.validation.registerExtenders();
            ko.validation.init( { insertMessages: true });

            var postbox = new ko.subscribable();
            var hypermediaEngine = new Application();

            ko.applyBindings(hypermediaEngine, document.getElementById("application"));
            new SirenLink({ href: document.getElementById("rootUrl").value }, "application").execute();
        </script>
    </body>
</html>
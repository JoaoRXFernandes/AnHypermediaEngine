<!DOCTYPE html>

<html id="currentResponse" lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>Hyper Remittances</title>

        <link href="@Url.Content("~/styles/bootstrap.min.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/styles/font-awesome.min.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/styles/simple-line-icons.css")" rel="stylesheet" media="screen">
        <link href="@Url.Content("~/styles/animate.css")" rel="stylesheet">
    
        <link href="@Url.Content("~/styles/style.css")" rel="stylesheet" media="screen">

        <script src="@Url.Content("~/scripts/vendor/modernizr.custom.js")"></script>
    </head>

    <body>
        <div id="preloader">
            <div id="status"></div>
        </div>

        <section id="home" class="pfblock-image screen-height">
            <div class="home-overlay"></div>
            <div class="intro">
                <h1>HyperRemittances</h1>
                <div class="start">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</div>
                <div class="start">Donec eu elit non ex tempus cursus et ac sem.</div>
                <div class="start">Nulla imperdiet metus eget nibh pellentesque efficitur.</div>
                <div class="start">Aenean aliquet porttitor justo, in pretium magna.</div>
                <div class="start">Aenean ac vehicula metus.</div>
            </div>

            <a href="#header">
                <div class="scroll-down">
                    <span>
                        <i class="fa fa-angle-down fa-2x"></i>
                    </span>
                </div>
            </a>
        </section>

        <header id="header" class="header">
            <nav data-bind="with: menu" class="navbar navbar-custom" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#custom-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>

                        <!-- ko with: home -->
                        <a class="navbar-brand" href="#" data-bind="click: execute">Hyper Remittances</a>
                        <!-- /ko -->
                    </div>

                    <div class="collapse navbar-collapse" id="custom-collapse">
                        <div class="row">
                            <ul class="nav navbar-nav navbar-right">
                                <!-- ko foreach: links -->
                                <li>
                                    <a href="#" data-bind="click: execute">
                                        <span data-bind="text: title"></span>
                                    </a>
                                </li>
                                <!-- /ko -->

                                <!-- ko foreach: actions -->
                                <li>
                                    <!-- ko foreach: fields -->
                                    <div class="form-group wow fadeInRight animated" data-wow-delay=".1s" style="margin-top: 10px; margin-left: 35px">
                                        <!-- ko if: $data.type == 'select' -->
                                        <select data-bind="options: $data.options,
                                                            optionsText: function(item) { return item.value },
                                                            optionsValue: function(item) { return item.key },
                                                            value: $data.value,
                                                            valueAllowUnset: true,
                                                            optionsAfterRender: function (option, item) {
                                                                                            ko.applyBindingsToNode(option, {
                                                                                                disable: item.key === ''
                                                                                            }, item);
                                                                                    },
                                                            attr: { name: name, placeholder: title }" class="form-control"></select>
                                        <!-- /ko -->
                                    </div>
                                    <!-- /ko -->

                                    <!-- ko switch -->
                                    <!-- ko case: $data instanceof SelfSubmitSirenAction -->
                                    <!-- /ko -->
                                    <!-- ko case: $else -->
                                    <button data-bind="click: $data.execute.bind($data), text: title" type="submit" class="btn btn-lg wow fadeInUp animated" style="padding: 8px 30px; margin: 10px;" data-wow-delay=".1s"></button>
                                    <!-- /ko -->
                                    <!-- /ko -->
                                </li>
                                <!-- /ko -->
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <section class="pfblock">
            @Html.Partial(Url.Content("siren/entity.cshtml"))
        </section>

        <footer id="footer">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <p class="heart">
                            Made with <span class="fa fa-heart fa-2x animated pulse"></span> in London
                        </p>
                    </div>
                </div>
            </div>
        </footer>
        
        <div class="scroll-up">
            <a href="#home"><i class="fa fa-angle-up"></i></a>
        </div>
        
        
        <script src="@Url.Content("~/scripts/vendor/jquery-1.11.1.min.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.sticky.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.parallax-1.1.3.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.easypiechart.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/jquery.cbpQTRotator.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/bootstrap.min.js")"></script>

        <script src="@Url.Content("~/scripts/vendor/imagesloaded.pkgd.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/smoothscroll.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/wow.min.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/waypoints.min.js")"></script>

        <script src="@Url.Content("~/scripts/vendor/knockout-3.3.0.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/knockout.validation.js")"></script>
        <script src="@Url.Content("~/scripts/vendor/knockout-switch-case.min.js")"></script>
        
        <script src="@Url.Content("~/scripts/vendor/underscore.min.js")"></script>

        <script src="@Url.Content("~/scripts/vendor/custom.js")"></script>

        <script src="@Url.Content("~/scripts/knockout/forEachPropertyBinding.js")"></script>

        <script src="@Url.Content("~/scripts/siren/entity.js")"></script>
        <script src="@Url.Content("~/scripts/siren/action.js")"></script>
        <script src="@Url.Content("~/scripts/siren/selfSubmitAction.js")"></script>
        <script src="@Url.Content("~/scripts/siren/field.js")"></script>
        <script src="@Url.Content("~/scripts/siren/link.js")"></script>

        <script src="@Url.Content("~/scripts/currentResponse.js")"></script>
        <script src="@Url.Content("~/scripts/menu.js")"></script>

        <input type="hidden" id="rootUrl" value="@ConfigurationManager.AppSettings["rootUrl"]" />
        <script type="text/javascript">
            ko.validation.registerExtenders();
            ko.validation.init({ insertMessages: true });

            var currentResponse = new CurrentResponse();
            ko.applyBindings(currentResponse, document.getElementById("currentResponse"));

            new WOW().init();

            $.ajax({
                type: "GET",
                url: document.getElementById("rootUrl").value,
                success: function (response) {
                    currentResponse.load(response);
                },
                dataType: "json"
            });
        </script>
    </body>

</html>